# SparkQ Bootstrap Configuration
# Sets up Python environment for SparkQ task queue

# Python environment
PY_BIN="/usr/bin/python3"
PY_VERSION="3.11"

# Dependencies - install SparkQ requirements
INSTALL_DEPS="true"
REQUIREMENTS_FILES="/home/luce/apps/sparkqueue/sparkq/requirements.txt"

# File management
WRITE_ENV="true"
MANAGE_GITIGNORE="true"
MANAGE_CLAUDEIGNORE="true"

# SparkQ application setup
PROJECT_ROOT="/home/luce/apps/sparkqueue"
APP_DIR="/home/luce/apps/sparkqueue/sparkq"
VENV_DIR="/home/luce/apps/sparkqueue/.venv"
CONFIG_FILE="/home/luce/apps/sparkqueue/sparkq.yml"
RUN_MODE="background"
ENV_PATH="/home/luce/apps/sparkqueue/.env"
ENV_APPEND="false"
GITIGNORE_PATH="/home/luce/apps/sparkqueue/.gitignore"

# SparkQ startup via CLI
MAIN_SCRIPT="/home/luce/apps/sparkqueue/sparkq/src/__main__.py"
RUN_CMD="python -m sparkq.src.cli run"

# Additional configuration
EDITABLE_INSTALL="false"
FOREGROUND_WRAPPER="false"
CLAUDEIGNORE_ENTRIES=" "
ENV_VARS=" "
