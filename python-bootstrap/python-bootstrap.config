# SparkQueue Bootstrap Configuration
# This config just sets up a Python environment without a startup script

# Python environment
PY_BIN="/usr/bin/python3"
PY_VERSION="3.13"

# Dependencies (use absolute path to avoid relative path issues)
INSTALL_DEPS="true"
REQUIREMENTS_FILES="/home/luce/apps/sparkqueue/python-bootstrap/requirements.txt"

# File management
WRITE_ENV="true"
MANAGE_GITIGNORE="true"
MANAGE_CLAUDEIGNORE="true"

# No MAIN_SCRIPT - we just want the venv, not an auto-startup script
PROJECT_ROOT="/home/luce/apps/sparkqueue"
APP_DIR="/home/luce/apps/sparkqueue/_build/sparkqueue"
VENV_DIR="/home/luce/apps/sparkqueue/.venv"
CONFIG_FILE="/home/luce/apps/sparkqueue/_build/sparkqueue/config.yaml"
RUN_MODE="background"
ENV_PATH="/home/luce/apps/sparkqueue/.env"
ENV_APPEND="false"
GITIGNORE_PATH="/home/luce/apps/sparkqueue/.gitignore"
CLAUDEIGNORE_ENTRIES="  "
ENV_VARS="  "
EDITABLE_INSTALL="false"
FOREGROUND_WRAPPER="false"
