# SparkQ Configuration Template
# Copy to sparkq.yml and customize for your project
# Generated files are git-ignored; this example is tracked

project:
  name: sparkq-local           # Change to your project name
  repo_path: .                 # Repository root path

server:
  host: 0.0.0.0
  port: 5005
  # Optional CORS settings (uncomment and set if serving non-local origins)
  # cors_origins:
  #   - https://your-app.example.com
  #   - https://admin.example.com
  # cors_allow_credentials: false

database:
  path: sparkq/data/sparkq.db
  mode: wal

purge:
  older_than_days: 3

# Internal SparkQ scripts directory
sparkq_scripts_dir: sparkq/scripts

# Project script directories to index (relative to repo root)
# Add your own directories here; sparkq/scripts/tools is the default
script_dirs:
  - sparkq/scripts/tools

# Task class timeout definitions (seconds)
task_classes:
  FAST_SCRIPT:
    timeout: 120
  MEDIUM_SCRIPT:
    timeout: 600
  LLM_LITE:
    timeout: 480
  LLM_HEAVY:
    timeout: 1200

# Available tools and their task classes
tools:
  run-bash:
    description: Bash script
    task_class: MEDIUM_SCRIPT
  run-python:
    description: Python script
    task_class: MEDIUM_SCRIPT
  llm-haiku:
    description: Haiku
    task_class: LLM_LITE
  llm-sonnet:
    description: Sonnet
    task_class: LLM_HEAVY
  llm-codex:
    description: Codex
    task_class: LLM_HEAVY
  quick-check:
    description: Quick validation check
    task_class: FAST_SCRIPT
  script-index:
    description: Index project scripts
    task_class: MEDIUM_SCRIPT

queue_runner:
  poll_interval: 30
  auto_fail_interval_seconds: 30
  base_url: http://localhost:5005  # API base URL

features:
  flags: {}

defaults:
  queue: {}
  model: llm-sonnet             # Default model for queue tasks
